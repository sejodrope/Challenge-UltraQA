# ===========================================
# Challenge QA API - Environment Configuration
# ===========================================

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=challenge_qa
DB_USERNAME=qa_user
DB_PASSWORD=qa_password

# JWT Authentication
JWT_SECRET=challenge-qa-secret-key-2025-change-in-production
JWT_EXPIRATION=86400

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_NAME="Challenge QA API - Fixed & Improved"
APP_URL=http://localhost:8080

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=/var/www/html/logs/app.log
LOG_TO_DATABASE=true

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=false

# Docker Configuration (for development)
MYSQL_ROOT_PASSWORD=root_password
PHP_PORT=8080
MYSQL_PORT=3306

# Instructions:
# 1. Copy this file to .env for local development
# 2. Update JWT_SECRET with a strong secret in production
# 3. Set APP_DEBUG=false in production
# 4. Configure proper CORS_ORIGIN in production
# 5. Never commit .env to version control